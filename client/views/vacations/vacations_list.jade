h1 Vacation List

table.table.table-hover
  thead
    tr
      th Title
      th Departure Date
      th Arrival Date
      th Departure Airport
      th Arrival Airport
        
  tbody
    tr(ng-repeat='vacation in vacations')    
      td
        a(ui-sref='vacations.show({vacationId:vacation._id})') {{vacation.title}}
      td {{vacation.departureDate | date: "yyyy-MM-dd"}}
      td {{vacation.arrivalDate | date: "yyyy-MM-dd"}}
      td {{vacation.departureAirport}}
      td {{vacation.arrivalAirport}}

        
